# Navigation
alias ..='cd ..'
alias ...='cd ../..'

# ls
alias l='ls -lh'
alias ll='ls -lha'
alias lt='ls -lhtr'

# Git
alias gs='git status -s'
alias ga='git add'
alias gc='git commit -v'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'
alias gb='git branch'
alias gx='git annex'
alias gco='git checkout'
alias grm='git rm $(git ls-files --deleted)'
alias grh='git reset HEAD'
alias grhh='git reset HEAD --hard'

# Misc
alias g='grep -i'
alias f='find . -iname'
alias ssht='sshuttle --dns -vr pig-monkey.com 0/0'

# Package management
case $PKGTOOL in
pacman)
    # Arch package management.
    alias update='sudo reflector -l 20 --sort rate --save /etc/pacman.d/mirrorlist && cat /etc/pacman.d/mirrorlist'
    alias upgrade='sudo packer -Syyu'
    alias install='sudo packer -S'
    alias remove='sudo pacman -Rs'
    ;;
apt)
    # Debian package management.
    alias update='sudo apt-get update'
    alias upgrade='sudo apt-get upgrade'
    alias install='sudo apt-get install'
    alias remove='sudo apt-get remove'
    ;;
esac

# todo.txt
alias t='todo'

# Set the default Python and easy_install version.
alias python='python2.7'
alias easy_install='easy_install-2.7'
