# Navigation
alias ..='cd ..'
alias ...='cd ../..'

# ls
alias l='ls -lh'
alias ll='ls -lha'
alias lt='ls -lhtr'

# Git
alias gs='git status -s'
alias ga='git add'
alias gc='git commit -v'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'
alias gx='git rm $(git ls-files --deleted)'
alias gr='git reset --hard HEAD'
alias gb='git branch'

# Misc
alias g='grep -i'
alias f='find . -iname'
alias tmux='tmux -2'
alias t='sshuttle --dns -vr pig-monkey.com 0/0'

case $PKGTOOL in
pacman)
    # Arch package management.
    alias update='sudo reflector -a 2 -f 6 --sort rate --save /etc/pacman.d/mirrorlist && cat /etc/pacman.d/mirrorlist'
    alias upgrade='sudo packer -Syyu'
    alias install='sudo packer -S'
    alias remove='sudo pacman -Rs'
    ;;
apt)
    # Debian package management.
    alias update='sudo apt-get update'
    alias upgrade='sudo apt-get upgrade'
    alias install='sudo apt-get install'
    alias remove='sudo apt-get remove'
    ;;
esac

# Set the default Python and easy_install version.
alias python='python2.7'
alias easy_install='easy_install-2.7'
