#########
# Media #
#########

# Toggle mute
XF86AudioMute
    amixer set Master toggle

# Toggle mic mute
XF86AudioMicMute
    amixer set Mic toggle

# Change volume
XF86Audio{Raise,Lower}Volume
    amixer set Master 5%{+,-} unmute

# Toggle mpd
super + 0
    mpc -q toggle

# Navigate mpd playlist
super + {comma, period}
    mpc -q {prev, next}

# Display current mpd track
super + slash
    notify-send -u low "$(mpc -f "%artist%" current)" "$(mpc -f "%title%" current)"


################
# Applications #
################

# Launch terminal
super + t
    $TERMINAL

# Launch web browser
super + w
    firefox -P default

# Launch web browser with work profile
super + shift + w
    firefox -P work

# Launch application launcher
super + space
    rofi -show run

# Launch window switcher
alt + Tab
    rofi -show window

# Launch password manager
super + p
    menu=$(echo -e "$HOME/.password-store\n$ALTPASSDIR" | rofi -dmenu); rofi-pass --root "${menu}"


########
# Misc #
########

# Lock the screen
super + l
    physlock -m

# Lock the screen
XF86ScreenSaver
    physlock -m

# Take a screenshot
Print
    scrot 'screenshot_%Y-%m-%d-%H%M%S.png' -e 'mv $f ~/tmp'

# Generate a QR code from the clipboard
super + q
    qcode
