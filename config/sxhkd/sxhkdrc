#########
# Media #
#########

# Toggle mute
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# Toggle mic mute
XF86AudioMicMute
    pactl set-source-mute 1 toggle

# Change volume
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

# Change volume
super + {k,j}
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

# Toggle mpd
super + 0
    mpc -q toggle

# Navigate mpd playlist
super + {comma, period}
    mpc -q {prev, next}

# Display current mpd track
super + slash
    notify-send -u low "$(mpc -f "%artist%" current)" "$(mpc -f "%title%" current)"

# Play the video URL in the clipboard
super + m
    play


################
# Applications #
################

# Launch terminal
super + t
    $TERMINAL

# Launch web browser
super + w
    firefox -P default

# Launch web browser with work profile
super + shift + w
    firefox -P work

# Launch application launcher
super + space
    rofi -show run

# Launch window switcher
alt + Tab
    rofi -show window

# Launch password manager
super + p
    menu=$(echo -e "$HOME/.password-store\n$ALTPASSDIR" | rofi -dmenu); rofi-pass --root "${menu}"

# Bookmark via pinboard
super + d
    termite --title pinit -e ~/bin/pinit


########
# Misc #
########

# Lock the screen
super + l
    /usr/local/bin/lock

# Lock the screen
XF86ScreenSaver
    /usr/local/bin/lock

# Change screen brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10

# Take a screenshot
Print
    scrot 'screenshot_%Y-%m-%d-%H%M%S.png' -e 'mv $f ~/tmp'
super + s
    teiler

# Generate a QR code from the clipboard
super + q
    qcode
